<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <h1>All User Code</h1>

    <% title.forEach( function(user) { %>
        <% if (user) { %>
            <ul>
                <h3>
                    <%= user.username %>
                </h3>
                
                <% sayhi.forEach( function(item) { %>
                    <%  if ( item) %>

                        <% if ( item.username == user.username ) %>
                            <li>
                                <p> <%= item.script %></p>
                            </li>
                        
                <% }) ; %>
                
            </ul>
        <% } %>
    <% }) %>

</body>
</html>